{
  "openapi": "3.0.0",
  "info": {
    "title": "TeleGrammy API Documentation",
    "version": "1.0.0",
    "description": "API documentation for the TeleGrammy Application"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "Local server"
    }
  ],
  "paths": {
    "/calls/init": {
      "post": {
        "summary": "Initiate a one-on-one or group call",
        "tags": ["Voice Calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "callerId": {
                    "type": "string",
                    "description": "The ID of the caller"
                  },
                  "calleeId": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "The IDs of the callee(s); must contain only one ID for one-on-one calls and multiple IDs for group calls"
                    }
                  }
                },
                "required": ["callerId", "calleeId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully initiated the voice call",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "sessionId": {
                      "type": "string",
                      "description": "ID of the newly initiated voice call session"
                    },
                    "webrtcOffer": {
                      "type": "string",
                      "description": "WebRTC offer details for the connection"
                    },
                    "encryptionToken": {
                      "type": "string",
                      "description": "Token for end-to-end encryption"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/join": {
      "post": {
        "summary": "Join an active group call",
        "tags": ["Voice Calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "description": "ID of the voice call to join"
                  },
                  "webrtcOffer": {
                    "type": "string",
                    "description": "WebRTC offer generated by the client (SDP message)"
                  }
                },
                "required": ["sessionId", "webrtcOffer"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully joined the voice call",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "webrtcAnswer": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/ice-candidate": {
      "post": {
        "summary": "Send ICE candidates for network traversal",
        "tags": ["Voice Calls"],
        "description": "Transfers ICE candidates between peers during WebRTC connection establishment",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "description": "ID of the ongoing call session"
                  },
                  "iceCandidate": {
                    "type": "string",
                    "description": "ICE candidate data from WebRTC client"
                  }
                },
                "required": ["sessionId", "iceCandidate"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ICE candidate sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/mute": {
      "patch": {
        "summary": "Mute microphone within a call",
        "tags": ["Voice Calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "description": "ID of the ongoing call session"
                  }
                },
                "required": ["sessionId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Microphone muted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/unmute": {
      "patch": {
        "summary": "Unmute microphone within a call",
        "tags": ["Voice Calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "description": "ID of the ongoing call session"
                  }
                },
                "required": ["sessionId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Microphone unmuted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/end": {
      "post": {
        "summary": "End an active call",
        "description": "Ends the call and records call duration and participants for logs",
        "tags": ["Voice Calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "description": "ID of the call session to end"
                  }
                },
                "required": ["sessionId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Call ended successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "call": {
                      "type": "object",
                      "properties": {
                        "duration": {"type": "string", "format": "time"},
                        "startTime": {"type": "string", "format": "date-time"},
                        "endTime": {"type": "string", "format": "date-time"}
                      }
                    },
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    },

    "/calls/history": {
      "get": {
        "summary": "Retrieve past call records",
        "description": "Fetches a list of past calls with details like duration and participants",
        "tags": ["Voice Calls"],
        "responses": {
          "200": {
            "description": "Successfully retrieved call history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "calls": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "callId": {"type": "string"},
                          "participants": {
                            "type": "array",
                            "items": {"type": "string"}
                          },
                          "duration": {"type": "string", "format": "time"},
                          "date": {"type": "string", "format": "date-time"}
                        }
                      }
                    },
                    "message": {"type": "string"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      }
    }
  }
}
