        "description": "Update the profile information (username, screen name, phone, bio, and status) of the authenticated user.",
        "tags": ["User Profile"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "bio": {
                    "type": "string"
                  },
                  "screenName": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User profile information updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
