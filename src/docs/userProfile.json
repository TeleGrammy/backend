                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string"
                        },
                        "username": {
                          "type": "string"
                        },
                        "screenName": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "bio": {
                          "type": "string"
                        },
                        "pictureURL": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "status": "success",
                  "data": [
                    {
                      "id": "fgs554445dsf",
                      "username": "test12",
                      "screenName": "test test",
                      "email": "example@test.com",
                      "phone": "0101010100",
                      "bio": "Lover of tech, coffee, and adventure. Always curious. üåç",
                      "pictureURL": "http://testdgffg"
