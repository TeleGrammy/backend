      "delete": {
        "summary": "Delete user profile picture",
        "description": "Delete the profile picture of the authenticated user.",
        "tags": ["User Profile"],
        "responses": {
          "200": {
            "description": "User profile picture deleted successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string"
                        },
                        "username": {
                          "type": "string"
                        },
